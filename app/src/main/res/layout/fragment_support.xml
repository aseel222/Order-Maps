<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash"
        tools:context="com.example.OrderMaps.ui.fragement.SupportFragment">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/supportfile"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_170sdp"
            app:lottie_fileName="support.json"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_20sdp"

            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

        <EditText
            android:id="@+id/faqetxt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            app:layout_constraintTop_toBottomOf="@id/supportfile"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/edittext_shape"
            android:hint="أكتب شكوتك"
            android:gravity="top|start"
            android:textAlignment="viewStart"
            android:paddingTop="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:inputType="text"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"




            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/faqconfirmbtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintTop_toBottomOf="@id/faqetxt"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:background="@color/move"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:text="تأكيد"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_50sdp"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>